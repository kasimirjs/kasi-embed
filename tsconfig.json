{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "declaration": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "lib": [
      "es2021",
      "dom"
    ],

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./test"
  ]
}
